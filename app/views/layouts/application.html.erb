<!DOCTYPE html>
<html>
  <head>
    <title>Instagram</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css", "data-turbo-track": "reload" %>
    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body class="<%= "#{controller.controller_name}-page" %>">
    <% if current_user %>
      <%= render 'layouts/navbar' %>
    <% end %>

    <div class="container <%= devise_controller? ? 'auth-container' : '' %>">
      <%= yield %>
    </div>
  </body>
</html>
