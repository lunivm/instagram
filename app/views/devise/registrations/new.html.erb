<%= render "devise/shared/error_messages", resource: resource %>

<div class="container d-flex align-items-center mt-5 flex-column">
  <div class="card" style="width: 25rem;">
    <%= image_tag 'logo', class: 'm-3' %>
    <h2 class="text-center">Sign Up</h2>
    <div class="card-body">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <div class="mb-3">
          <%= f.email_field :email, class: 'form-control', autofocus: true, autocomplete: "email", placeholder: 'Phone number or Email address' %>
        </div>
        <div class="mb-3">
          <%= f.text_field :full_name, class: 'form-control', autofocus: true, autocomplete: "name", placeholder: 'Full name' %>
        </div>
        <div class="mb-3">
          <%= f.text_field :username, class: 'form-control', autofocus: true, autocomplete: "username", placeholder: 'Username' %>
        </div>
        <div class="mb-3">
          <%= f.password_field :password, class: 'form-control', autocomplete: "new-password", placeholder: 'Password' %>
        </div>
        <div class="mb-3">
          <%= f.password_field :password_confirmation, class: 'form-control', autocomplete: "new-password", placeholder: 'Password confirmation' %>
        </div>
        <%= f.submit "Sign up", class: "btn btn-primary w-100"%>
      <% end %>
    </div>
  </div>

  <div class="card mt-4" style="width: 25rem;">
    <div class="card-body">
      Don't have an account? <%= link_to "Log In", new_session_path(resource_name) %><br />
    </div>
  </div>
</div>
